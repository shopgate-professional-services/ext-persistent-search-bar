{
  "version": "1.4.4",
  "id": "@shopgate-project/persistent-search-bar",
  "components": [
    {
      "type": "portals",
      "target": "view.content.before",
      "path": "frontend/portals/SearchFieldPortal",
      "id": "SearchField"
    },
    {
      "type": "portals",
      "target": "app-bar.right",
      "path": "frontend/portals/AppBarRight",
      "id": "AppBarRight"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    }
  ],
  "configuration": {
    "searchBarBlacklist": {
      "type": "admin",
      "destination": "frontend",
      "default": [
        "/browse",
        "/cart",
        "/filter",
        "/login",
        "/checkout",
        "/item/:productId/gallery/:slide",
        "/search",
        "/scanner"
      ],
      "params": {
        "type": "json",
        "label": "Path values for blacklisting"
      }
    },
    "barBgColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "textarea",
        "label": "Background color of the search bar"
      }
    },
    "bgColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "textarea",
        "label": "Background color of the suggestion list"
      }
    },
    "textColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "textarea",
        "label": "Text color of the suggestion list"
      }
    },
    "suggestionsMinChars": {
      "type": "admin",
      "destination": "frontend",
      "default": 3,
      "params": {
        "type": "text",
        "label": "Minimum number of chars to trigger search suggestions"
      }
    },
    "hideOnScroll": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "config if the bar should go away while scrolling"
      }
    }
  }
}
